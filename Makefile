# bashrs lint - Lint all bash scripts for safety issues
bashrs-lint:
	@echo "üîç BASHRS: Linting all bash scripts..."
	@for file in hooks/*.sh scripts/*.sh hooks/pre-commit; do \
		if [ -f "$$file" ]; then \
			echo "  Linting $$file..."; \
			$(BASHRS) lint "$$file" 2>&1 || true; \
		fi; \
	done
	@echo "‚úÖ bashrs lint complete"

# bashrs score - Score bash script quality
bashrs-score:
	@echo "üèÜ BASHRS: Scoring bash script quality..."
	@for file in hooks/*.sh scripts/*.sh hooks/pre-commit; do \
		if [ -f "$$file" ]; then \
			echo "  Scoring $$file..."; \
			$(BASHRS) score "$$file" 2>&1 || true; \
		fi; \
	done
	@echo "‚úÖ bashrs score complete"

# bashrs audit - Comprehensive quality audit
bashrs-audit:
	@echo "üî¨ BASHRS: Running comprehensive quality audit..."
	@for file in hooks/*.sh scripts/*.sh hooks/pre-commit; do \
		if [ -f "$$file" ]; then \
			echo "  Auditing $$file..."; \
			$(BASHRS) audit "$$file" 2>&1 || true; \
		fi; \
	done
	@echo "‚úÖ bashrs audit complete"

# bashrs make - Makefile purification and verification
bashrs-make:
	@echo "üìã BASHRS: Analyzing Makefile..."
	@$(BASHRS) make parse Makefile 2>&1 || true
	@echo "‚úÖ bashrs make complete"

# bashrs format - Format all bash scripts
bashrs-format:
	@echo "üé® BASHRS: Formatting bash scripts..."
	@for file in hooks/*.sh scripts/*.sh hooks/pre-commit; do \
		if [ -f "$$file" ]; then \
			echo "  Formatting $$file..."; \
			$(BASHRS) format "$$file" 2>&1 || true; \
		fi; \
	done
	@echo "‚úÖ bashrs format complete"

# bashrs coverage - Generate coverage report for bash scripts
bashrs-coverage:
	@echo "üìä BASHRS: Generating coverage report..."
	@for file in hooks/*.sh scripts/*.sh hooks/pre-commit; do \
		if [ -f "$$file" ]; then \
			echo "  Coverage for $$file..."; \
			$(BASHRS) coverage "$$file" 2>&1 || true; \
		fi; \
	done
	@echo "‚úÖ bashrs coverage complete"

# bashrs test - Run bash script tests
bashrs-test:
	@echo "üß™ BASHRS: Running bash script tests..."
	@for file in hooks/*.sh scripts/*.sh hooks/pre-commit; do \
		if [ -f "$$file" ]; then \
			echo "  Testing $$file..."; \
			$(BASHRS) test "$$file" 2>&1 || true; \
		fi; \
	done
	@echo "‚úÖ bashrs test complete"

# Run all bashrs quality tools
bashrs-all: bashrs-lint bashrs-score bashrs-audit bashrs-make bashrs-format bashrs-coverage bashrs-test
	@echo "üéâ BASHRS: All quality tools complete"

