				echo "‚úÖ PASS"; \
				PASS=$$((PASS + 1)); \
			else \
				echo "‚ùå FAIL"; \
				FAIL=$$((FAIL + 1)); \
			fi; \
		done; \
	else \
		printf "  Linting $(TEST_FILE)... "; \
		if ruchy lint "$(TEST_FILE)" >/dev/null 2>&1; then \
			echo "‚úÖ PASS"; \
			PASS=1; \
		else \
			echo "‚ùå FAIL"; \
			FAIL=1; \
		fi; \
	fi; \
	echo "  Summary: $$PASS passed, $$FAIL failed"; \
	echo "‚úÖ ruchy lint dogfooding complete"

