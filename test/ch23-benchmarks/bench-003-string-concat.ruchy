// BENCH-003: String concatenation (10K operations)
// Ruchy implementation matching Python baseline
// Note: Started with 10K ops for practical timing

fun string_concatenation(iterations) {
    // Concatenate strings in a loop
    let mut result = ""
    let mut i = 0

    while i < iterations {
        result = result + "x"
        i = i + 1
    }

    result
}

fun main() {
    let iterations = 10000
    let result = string_concatenation(iterations)

