// Conditional compilation
#[cfg(target_os = "linux")]
fn linux_only() {}

#[cfg(feature = "network")]
mod networking {}

// Testing
#[test]
fn test_function() {}

#[ignore]
#[test]
fn expensive_test() {}

// Documentation
#[doc = "This is a documented function"]
fn documented() {}

// Deprecation
#[deprecated(note = "Use new_function instead")]
fn old_function() {}

// Allow/deny lints
#[allow(dead_code)]
fn unused_function() {}

#[deny(missing_docs)]
mod well_documented {}

// Inline hints
#[inline]
fn small_function() {}

#[inline(always)]
fn always_inline() {}