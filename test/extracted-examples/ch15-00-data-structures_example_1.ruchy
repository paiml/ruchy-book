// Ch15: Data Structures - Working with Complex Data
// Using arrays and nested structures

let people_names = ["Alice", "Bob", "Charlie"]
let people_ages = [30, 25, 35]
let people_cities = ["New York", "San Francisco", "Seattle"]

// Display people data
println("People Database:")
for i in 0..3 {
    println(f"  {people_names[i]}: {people_ages[i]} years old, from {people_cities[i]}")
}

// Statistics
let total_people = people_names.len()
let first_person = people_names[0]
let last_person = people_names[2]

println(f"Total people: {total_people}")
println(f"First person: {first_person}")
println(f"Last person: {last_person}")

// Age calculations
let min_age = 25
let max_age = 35
let avg_age = (30 + 25 + 35) / 3

println(f"Age range: {min_age} to {max_age}")
println(f"Average age: {avg_age}")