// Ch19: Debugging - Debug Output Techniques
fun debug_print(label, value) {
    println(f"[DEBUG] {label}: {value}")
}

fun calculate_discount(price, discount_percent) {
    debug_print("Input price", price)
    debug_print("Discount %", discount_percent)
    
    let discount_amount = price * discount_percent / 100
    debug_print("Discount amount", discount_amount)
    
    let final_price = price - discount_amount
    debug_print("Final price", final_price)
    
    return final_price
}

// Test with debugging
let original_price = 100
let discount = 20

println("=== Calculating discount ===")
let result = calculate_discount(original_price, discount)
println(f"Original: ${original_price}")
println(f"Discount: {discount}%")
println(f"You pay: ${result}")