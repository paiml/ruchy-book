// Create a channel
let (sender, receiver) = channel()

// Multiple producers
for i in range(10) {
    let tx = sender.clone()
    spawn move {
        let result = process(i)
        tx.send(result)
    }
}

// Single consumer
spawn move {
    while let Ok(result) = receiver.recv() {
        println(f"Got: {result}")
    }
}

