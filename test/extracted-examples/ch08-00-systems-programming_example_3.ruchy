// Register signal handlers
signal::on(SIGINT, || {
    println("\nGracefully shutting down...")
    cleanup()
    exit(0)
})

signal::on(SIGTERM, || {
    save_state()
    exit(0)
})

signal::on(SIGUSR1, || {
    reload_config()
})

// Send signals to other processes
let target_pid = 1234
signal::send(target_pid, SIGUSR1)

// Block/unblock signals
signal::block([SIGPIPE])
critical_operation()
signal::unblock([SIGPIPE])