// Ch20: Best Practices - Clean Code Principles

// Good: Descriptive function names
fun calculate_circle_area(radius) {
    let pi = 3.14159
    return pi * radius * radius
}

// Good: Single responsibility
fun validate_age(age) {
    return age >= 0 && age <= 120
}

fun format_age_message(age) {
    if validate_age(age) {
        return f"Age {age} is valid"
    } else {
        return f"Age {age} is invalid"
    }
}

// Good: Clear variable names
let user_age = 25
let circle_radius = 5.0

// Test the functions
let area = calculate_circle_area(circle_radius)
println(f"Circle area (radius {circle_radius}): {area}")

let age_message = format_age_message(user_age)
println(age_message)

// Test edge cases
println(format_age_message(-1))
println(format_age_message(121))