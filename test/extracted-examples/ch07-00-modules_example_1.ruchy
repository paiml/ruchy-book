fun math_add(a, b) {
    return a + b
}

fun math_multiply(a, b) {
    return a * b
}

fun string_greet(name) {
    return f"Hello, {name}!"
}

// Test all module functions
let sum_result = math_add(10, 5)
let product_result = math_multiply(4, 3)
let greeting_result = string_greet("Alice")

println(f"Math add: {sum_result}")
println(f"Math multiply: {product_result}")
println(greeting_result)