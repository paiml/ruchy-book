// Ch17: Recursion - Factorial Function
fun factorial(n) {
    if n <= 1 {
        return 1
    } else {
        return n * factorial(n - 1)
    }
}

// Test factorial function
let fact_5 = factorial(5)
println(f"5! = {fact_5}")

let fact_0 = factorial(0)
println(f"0! = {fact_0}")

let fact_1 = factorial(1)  
println(f"1! = {fact_1}")

let fact_3 = factorial(3)
println(f"3! = {fact_3}")

// Verify results
println(f"5! = 120: {fact_5 == 120}")
println(f"3! = 6: {fact_3 == 6}")