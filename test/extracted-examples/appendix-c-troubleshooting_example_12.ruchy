// ❌ Infinite recursion causes stack overflow
fn infinite_recursion(n: i32) -> i32 {
    infinite_recursion(n + 1)  // No base case
}

// ✅ Proper recursion with base case
fn factorial(n: i32) -> i32 {
    if n <= 1 {
        1  // Base case
    } else {
        n * factorial(n - 1)
    }
}

// ✅ Or use iteration
fn factorial_iterative(n: i32) -> i32 {
    let mut result = 1
    for i in 1..=n {
        result *= i
    }
    result
}