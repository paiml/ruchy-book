#!/usr/bin/env -S ../bashrs/target/release/bashrs
# Ruchy Book Pre-Commit Hook - TICKET-018 Enforcement
# Enforces 18-tool comprehensive testing on all book examples
# Following Toyota Way: Zero tolerance for quality regression

set -e

echo "üîí RUCHY BOOK PRE-COMMIT QUALITY GATES (TICKET-018)"
echo "=================================================="
echo ""

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Track gate results
GATES_PASSED=0
GATES_FAILED=0

# Function to run a gate
run_gate() {
    local gate_name="$1"
    local gate_command="$2"

    echo -n "üîç GATE: $gate_name... "

    if eval "$gate_command" > /tmp/gate_output_$$ 2>&1; then
        echo -e "${GREEN}‚úÖ PASS${NC}"
        GATES_PASSED=$((GATES_PASSED + 1))
        return 0
    else
        echo -e "${RED}‚ùå FAIL${NC}"
        echo ""
        echo "üìã Failure details:"
        cat /tmp/gate_output_$$
        echo ""
        GATES_FAILED=$((GATES_FAILED + 1))
        rm -f /tmp/gate_output_$$
        return 1
    fi

    rm -f /tmp/gate_output_$$
}

# GATE 1: Check if changed files include book examples
echo "üìã Checking for modified book examples..."
CHANGED_MARKDOWN=$(git diff --cached --name-only --diff-filter=ACM | grep '^src/.*\.md$' || true)

if [ -z "$CHANGED_MARKDOWN" ]; then
    echo -e "${YELLOW}‚è≠Ô∏è  No markdown files changed, skipping example testing${NC}"
    echo ""
    echo "‚úÖ Pre-commit checks complete (no examples to test)"
    exit 0
fi

echo "üìù Changed markdown files:"
echo "$CHANGED_MARKDOWN" | sed 's/^/  - /'
echo ""

# GATE 2: Verify 18-tool testing infrastructure exists
echo "üîß GATE 2: Verify 18-Tool Testing Infrastructure"
run_gate "18-tool test script exists" "[ -f scripts/extract-examples.ts ]" || {
    echo -e "${RED}‚ùå BLOCKED: scripts/extract-examples.ts not found${NC}"
    echo "   This is required for TICKET-018 comprehensive testing"
    exit 1
}

# GATE 3: Verify ruchy is installed and working
echo "üîß GATE 3: Verify Ruchy Installation"
run_gate "ruchy command available" "command -v ruchy >/dev/null 2>&1" || {
    echo -e "${RED}‚ùå BLOCKED: ruchy not found in PATH${NC}"
    echo "   Install ruchy to run quality gates"
    exit 1
}

# GATE 4: Extract and test all examples
echo "üß™ GATE 4: Extract and Test All Book Examples"
echo "   Running comprehensive example extraction and testing..."
echo "   (This validates examples compile with current ruchy version)"
echo ""

if ! deno task extract-examples >/tmp/extract_output_$$ 2>&1; then
    echo -e "${RED}‚ùå BLOCKED: Example extraction/testing failed${NC}"
    echo ""
    echo "üìã Test output:"
    tail -50 /tmp/extract_output_$$
    echo ""
    echo "See full output: /tmp/extract_output_$$"
    rm -f /tmp/extract_output_$$
    exit 1
fi

# Parse results
EXAMPLES_TOTAL=$(grep "üíª Code examples found:" /tmp/extract_output_$$ | awk '{print $5}' || echo "0")
EXAMPLES_PASSING=$(grep "‚úÖ Examples working:" /tmp/extract_output_$$ | awk '{print $4}' || echo "0")
EXAMPLES_FAILING=$(grep "‚ùå Examples failing:" /tmp/extract_output_$$ | awk '{print $4}' || echo "0")
PASS_RATE=$(grep "üìà Success rate:" /tmp/extract_output_$$ | awk '{print $4}' || echo "0%")

echo ""
echo "üìä Test Results:"
echo "   Total examples: $EXAMPLES_TOTAL"
echo "   Passing: $EXAMPLES_PASSING"
echo "   Failing: $EXAMPLES_FAILING"
echo "   Pass rate: $PASS_RATE"
echo ""

rm -f /tmp/extract_output_$$

# Verify minimum pass rate (90% required)
PASS_RATE_NUM=$(echo "$PASS_RATE" | tr -d '%')
if [ "$PASS_RATE_NUM" -lt 90 ]; then
    echo -e "${RED}‚ùå BLOCKED: Pass rate below 90% threshold${NC}"
    echo "   Current: $PASS_RATE, Required: 90%"
    echo "   Fix failing examples before committing"
    exit 1
fi

echo -e "${GREEN}‚úÖ PASS${NC} - Examples meet quality threshold"
GATES_PASSED=$((GATES_PASSED + 1))

# GATE 5: Check for vaporware documentation
echo ""
echo "üîß GATE 5: Check for Vaporware Documentation"
run_gate "No 'coming soon' or 'not yet implemented'" "! grep -r 'coming soon\|not yet implemented\|TODO\|FIXME\|HACK' src/" || {
    echo -e "${YELLOW}‚ö†Ô∏è  WARNING: Found vaporware documentation markers${NC}"
    echo "   Consider filing GitHub issues instead of inline TODOs"
    # Don't block on this - just warn
}

# GATE 6: Verify function keyword usage
echo ""
echo "üîß GATE 6: Verify Ruchy Function Keyword Usage"
echo "   Checking that Ruchy examples use 'fun' not 'fn'..."

# Find any Ruchy code blocks using 'fn' instead of 'fun'
FN_USAGE=$(grep -r '```ruchy' src/ -A 10 | grep -E '^\s*fn\s+[a-zA-Z_]' | grep -v '```rust' || true)

if [ -n "$FN_USAGE" ]; then
    echo -e "${RED}‚ùå FAIL${NC}"
    echo ""
    echo "Found Ruchy examples using 'fn' instead of 'fun':"
    echo "$FN_USAGE"
    echo ""
    echo "Ruchy uses 'fun' for function definitions, 'fn' is for Rust examples only"
    GATES_FAILED=$((GATES_FAILED + 1))
else
    echo -e "${GREEN}‚úÖ PASS${NC}"
    GATES_PASSED=$((GATES_PASSED + 1))
fi

# GATE 7: TICKET-018/020 Enforcement (19-Tool Testing - Future)
echo ""
echo "üéØ GATE 7: TICKET-018/020 19-Tool Comprehensive Testing"
echo -e "${YELLOW}‚è≠Ô∏è  INFO: Full 19-tool testing not yet enforced (TICKET-018/020 in progress)${NC}"
echo "   Current: Testing with 'ruchy run' only"
echo "   Target: Testing with all 19 tools per example"
echo ""
echo "   The 19 tools are:"
echo "     Core (3): run, compile, wasm"
echo "     Quality (15): check, test, fmt, lint, provability, runtime, score,"
echo "                   quality-gate, optimize, prove, doc, bench, ast, coverage, mcp"
echo "     Debugging (1): debug (ruchydbg validate, ruchy --trace, dataflow:debug)"
echo ""
echo "   See docs/tickets/TICKET-018-COMPREHENSIVE-TESTING.md for details"
echo "   See docs/tickets/TICKET-020-DEBUGGING-TOOLS-MANDATORY.md for debugging details"

# GATE 8: Debugging Tools Validation (NEW - TICKET-020)
echo ""
echo "üêõ GATE 8: Debugging Tools Validation (TICKET-020)"
echo "   Validating ruchydbg and debugging infrastructure..."

# Check if ruchydbg is available
if ! command -v ruchydbg >/dev/null 2>&1; then
    echo -e "${YELLOW}‚ö†Ô∏è  WARNING: ruchydbg not found${NC}"
    echo "   Install with: cargo install ruchyruchy"
    echo "   Debugging validation skipped"
else
    # Check if we're in the right location for ruchydbg
    if [ -d "../ruchyruchy/validation" ]; then
        echo "   Running ruchydbg validation from ../ruchyruchy..."
        if (cd ../ruchyruchy && ruchydbg validate >/dev/null 2>&1); then
            echo -e "${GREEN}‚úÖ PASS${NC} - Debugging infrastructure validated"
            GATES_PASSED=$((GATES_PASSED + 1))
        else
            echo -e "${YELLOW}‚ö†Ô∏è  WARNING: ruchydbg validation failed${NC}"
            echo "   This is informational - not blocking yet"
        fi
    else
        echo -e "${YELLOW}‚ö†Ô∏è  INFO: ruchydbg validation requires ../ruchyruchy${NC}"
        echo "   Clone from: https://github.com/paiml/ruchyruchy"
    fi

    # Test --trace flag on a simple example
    echo "   Testing ruchy --trace flag..."
    TRACE_TEST=$(echo "2 + 2" | ruchy --trace 2>&1 | grep -E "^4$" || true)
    if [ -n "$TRACE_TEST" ]; then
        echo -e "${GREEN}‚úÖ PASS${NC} - ruchy --trace working"
        GATES_PASSED=$((GATES_PASSED + 1))
    else
        echo -e "${YELLOW}‚ö†Ô∏è  WARNING: ruchy --trace may not be working${NC}"
        echo "   This is informational - not blocking yet"
    fi
fi

# GATE 9: Version Consistency Check (NEW - From Systematic Verification)
echo ""
echo "üîß GATE 9: Version Consistency Check"
echo "   Checking for version inconsistencies in changed files..."

# Get current Ruchy version
CURRENT_VERSION=$(ruchy --version 2>&1 | grep -oP 'ruchy \K[0-9]+\.[0-9]+\.[0-9]+' || echo "unknown")
echo "   Current ruchy version: $CURRENT_VERSION"

# Check for old version references in changed files
VERSION_ISSUES=""
for file in $CHANGED_MARKDOWN; do
    # Look for version references that don't match current version
    OLD_VERSIONS=$(grep -n "ruchy v[0-9]\+\.[0-9]\+\.[0-9]\+\|Ruchy [Vv]ersion.*[0-9]\+\.[0-9]\+\.[0-9]\+" "$file" | grep -v "$CURRENT_VERSION" | grep -v "v3\.169\.0\|v3\.82\.0\|v3\.67\.0" || true)

    if [ -n "$OLD_VERSIONS" ]; then
        VERSION_ISSUES="${VERSION_ISSUES}File: $file\n$OLD_VERSIONS\n\n"
    fi
done

if [ -n "$VERSION_ISSUES" ]; then
    echo -e "${RED}‚ùå FAIL${NC}"
    echo ""
    echo "Found version inconsistencies (should be $CURRENT_VERSION):"
    echo -e "$VERSION_ISSUES"
    echo "Historical versions (v3.169.0, v3.82.0, v3.67.0) are OK for context."
    echo "Update version references to match current ruchy version."
    GATES_FAILED=$((GATES_FAILED + 1))
else
    echo -e "${GREEN}‚úÖ PASS${NC} - All version references consistent"
    GATES_PASSED=$((GATES_PASSED + 1))
fi

# GATE 10: Enhanced Vaporware & Quality Regression Detection (NEW)
echo ""
echo "üîß GATE 10: Enhanced Vaporware & Quality Regression Detection"
echo "   Checking for documentation quality issues..."

QUALITY_ISSUES=0

# Check for common vaporware patterns in changed files
for file in $CHANGED_MARKDOWN; do
    echo "   Checking $file..."

    # Pattern 1: Uncommented "will be" or "planned" features
    FUTURE_PROMISES=$(grep -n "will be\|planned feature\|upcoming\|soon\|future version" "$file" | grep -v "^#\|^\*\*Note\*\*\|^>" || true)
    if [ -n "$FUTURE_PROMISES" ]; then
        echo -e "   ${YELLOW}‚ö†Ô∏è  Found future promises in $file:${NC}"
        echo "$FUTURE_PROMISES" | head -3
        QUALITY_ISSUES=$((QUALITY_ISSUES + 1))
    fi

    # Pattern 2: Example code without output verification
    EXAMPLES_WITHOUT_OUTPUT=$(awk '/```ruchy/,/```/{if(/```ruchy/)p=1; if(p&&/```/&&!/```ruchy/)p=0; if(p)print NR": "$0}' "$file" | head -20)
    if [ -n "$EXAMPLES_WITHOUT_OUTPUT" ]; then
        # Check if there's an **Output:** section nearby
        if ! grep -q "\*\*Output:\*\*" "$file"; then
            echo -e "   ${YELLOW}‚ö†Ô∏è  Examples may lack output verification in $file${NC}"
            QUALITY_ISSUES=$((QUALITY_ISSUES + 1))
        fi
    fi

    # Pattern 3: Broken function definitions (using 'fn' in Ruchy code)
    # This is redundant with GATE 6 but provides file-specific feedback
    FN_IN_RUCHY=$(awk '/```ruchy/,/```/{if(/```ruchy/)p=1; if(p&&/```/&&!/```ruchy/)p=0; if(p&&/^\s*fn\s+[a-zA-Z_]/)print NR": "$0}' "$file" || true)
    if [ -n "$FN_IN_RUCHY" ]; then
        echo -e "   ${RED}‚ùå FAIL: Found 'fn' in Ruchy code (should be 'fun'):${NC}"
        echo "$FN_IN_RUCHY"
        QUALITY_ISSUES=$((QUALITY_ISSUES + 1))
        GATES_FAILED=$((GATES_FAILED + 1))
    fi
done

if [ $QUALITY_ISSUES -eq 0 ]; then
    echo -e "${GREEN}‚úÖ PASS${NC} - No quality issues detected"
    GATES_PASSED=$((GATES_PASSED + 1))
elif [ $QUALITY_ISSUES -le 2 ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  WARNING${NC} - $QUALITY_ISSUES quality issues found (not blocking)"
    echo "   Consider addressing these for production-ready documentation"
    GATES_PASSED=$((GATES_PASSED + 1))
else
    echo -e "${RED}‚ùå FAIL${NC} - $QUALITY_ISSUES quality issues found"
    echo "   Fix quality issues before committing"
    GATES_FAILED=$((GATES_FAILED + 1))
fi

# Summary
echo ""
echo "=================================================="
echo "üéâ PRE-COMMIT QUALITY GATES SUMMARY"
echo "=================================================="
echo ""
echo "   Gates Passed: ${GREEN}$GATES_PASSED${NC}"
if [ $GATES_FAILED -gt 0 ]; then
    echo "   Gates Failed: ${RED}$GATES_FAILED${NC}"
fi
echo ""
echo "   Pass Rate: $PASS_RATE (Required: ‚â•90%)"
echo "   Examples: $EXAMPLES_PASSING/$EXAMPLES_TOTAL passing"
echo ""

if [ $GATES_FAILED -gt 0 ]; then
    echo -e "${RED}‚ùå COMMIT BLOCKED${NC}"
    echo "   Fix failing quality gates before committing"
    exit 1
fi

echo -e "${GREEN}‚úÖ ALL GATES PASSED - COMMIT ALLOWED${NC}"
echo ""
echo "Quality standards met. Committing changes..."
echo ""

exit 0
